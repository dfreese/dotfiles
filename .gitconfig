[user]
  name = David Freese
  email = freese@verily.com
[color]
  ui = auto
[core]
  excludesfile = ~/dotfiles/global.gitignore
[diff]
  tool = meld
[alias]
  # Basic abbreviations
  a = add
  # https://stackoverflow.com/a/7067489/2465202
  alias = config --get-regexp ^alias\\.
  br = branch -vv
  c = commit
  ca = commit -a
  cam = commit -am
  co = checkout
  cob = checkout -b
  com = checkout master
  d = diff
  dc = checkout HEAD --
  discard = checkout HEAD --
  dl = diff --name-only
  dm = diff master
  dml = diff master --name-only
  find = log --abbrev-commit --date local --grep
  # A shorthand version that shows the last twenty commits, which is often what
  # I want to see anyway.
  g = log --graph --oneline --decorate --all -n20
  # https://stackoverflow.com/a/35075021/2465202
  graph = log --graph --oneline --decorate --all
  last = log -n1 --decorate
  ld = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
  publish = push origin HEAD
  rs = rebase --skip
  rc = rebase --continue
  redo = commit --amend --no-edit
  refresh = fetch --all --prune
  s = status
  ss = stash show -p stash@{0}
  uncommit = reset --soft HEAD~1
  unstage = reset HEAD --
  us = unstage
  upc = checkout @{u}
  upd = diff @{u}
  updl = diff @{u} --name-only
  upm = merge @{u} --no-edit
[http]
  cookiefile = ~/.gitcookies
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
